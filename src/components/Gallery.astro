---
import { Image } from 'astro:assets';
import GalleryWithModal from './GalleryWithModal';
import image1 from '../../public/docs/1.png';
import image2 from '../../public/docs/2.png';
import image3 from '../../public/docs/3.png';
import image4 from '../../public/docs/4.jpeg';
import image5 from '../../public/docs/5.jpeg';
import image6 from '../../public/docs/6.jpeg';

const images = [
  { src: image1.src, alt: 'EcoDenser Installation' },
  { src: image2.src, alt: 'Laboratory Setup' },
  { src: image3.src, alt: 'EcoDenser Unit' },
  { src: image4.src, alt: 'Laboratory Equipment' },
  { src: image5.src, alt: 'EcoDenser System' },
  { src: image6.src, alt: 'Product Detail' },
];
---

<section class="py-20 bg-white" id="gallery">
  <div class="container mx-auto px-4">
    <h2 class="text-4xl font-bold text-center text-gray-900 mb-12">Gallery</h2>
    <GalleryWithModal images={images} client:load />
  </div>
</section>