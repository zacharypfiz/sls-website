---
import { Image } from 'astro:assets';
import image1 from '../../public/docs/1.png';
import image2 from '../../public/docs/2.png';
import image3 from '../../public/docs/3.png';
import image4 from '../../public/docs/4.jpeg';
import image5 from '../../public/docs/5.jpeg';
import image6 from '../../public/docs/6.jpeg';

const images = [
  { src: image1, alt: 'EcoDenser Installation' },
  { src: image2, alt: 'Laboratory Setup' },
  { src: image3, alt: 'EcoDenser Unit' },
  { src: image4, alt: 'Laboratory Equipment' },
  { src: image5, alt: 'EcoDenser System' },
  { src: image6, alt: 'Product Detail' },
];
---

<section class="py-20 bg-white" id="gallery">
  <div class="container mx-auto px-4">
    <h2 class="text-4xl font-bold text-center text-gray-900 mb-12">Gallery</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-7xl mx-auto">
      {images.map((image, index) => (
        <div class="aspect-square overflow-hidden rounded-lg shadow-lg cursor-pointer gallery-image-card group" data-image-src={image.src.src} data-image-alt={image.alt}>
          <Image
            src={image.src}
            alt={image.alt}
            width={600}
            height={600}
            class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
            format="webp"
            quality={90}
            loading="lazy"
          />
        </div>
      ))}
    </div>
  </div>
</section>

<script>
  let selectedImage = null;
  let modalInstance = null;

  // Create modal container
  const modalContainer = document.createElement('div');
  document.body.appendChild(modalContainer);

  function openModal(src, alt) {
    selectedImage = { src, alt };
    if (modalInstance) {
      modalInstance.remove();
    }
    
    // Create modal backdrop
    const backdrop = document.createElement('div');
    backdrop.className = 'fixed inset-0 z-50 flex items-center justify-center bg-black bg-opacity-75 backdrop-blur-sm';
    backdrop.onclick = closeModal;
    
    const modalContent = document.createElement('div');
    modalContent.className = 'relative max-w-full max-h-full p-4';
    modalContent.onclick = (e) => e.stopPropagation();
    
    const closeButton = document.createElement('button');
    closeButton.className = 'absolute top-2 right-2 z-10 bg-black bg-opacity-50 text-white p-2 rounded-full hover:bg-opacity-75 transition-all';
    closeButton.setAttribute('aria-label', 'Close modal');
    closeButton.innerHTML = '<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" /></svg>';
    closeButton.onclick = closeModal;
    
    const img = document.createElement('img');
    img.src = src;
    img.alt = alt;
    img.className = 'max-w-full max-h-[90vh] object-contain rounded-lg shadow-2xl';
    
    modalContent.appendChild(closeButton);
    modalContent.appendChild(img);
    backdrop.appendChild(modalContent);
    modalContainer.appendChild(backdrop);
    
    modalInstance = backdrop;
    document.body.style.overflow = 'hidden';
  }

  function closeModal() {
    if (modalInstance) {
      modalInstance.remove();
      modalInstance = null;
    }
    document.body.style.overflow = 'unset';
  }

  // Add click handlers
  document.addEventListener('DOMContentLoaded', () => {
    const imageCards = document.querySelectorAll('.gallery-image-card');
    imageCards.forEach(card => {
      card.addEventListener('click', () => {
        const src = (card as HTMLElement).dataset.imageSrc;
        const alt = (card as HTMLElement).dataset.imageAlt;
        openModal(src, alt);
      });
    });
  });

  // ESC key handler
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && modalInstance) {
      closeModal();
    }
  });
</script>