---
import { Image } from 'astro:assets';
import image1 from '../../public/docs/1.png';
import image2 from '../../public/docs/2.png';
import image3 from '../../public/docs/3.png';
import image4 from '../../public/docs/4.jpeg';
import image5 from '../../public/docs/5.jpeg';
import image6 from '../../public/docs/6.jpeg';

const images = [
  { src: image1, alt: 'EcoDenser Installation' },
  { src: image2, alt: 'Laboratory Setup' },
  { src: image3, alt: 'EcoDenser Unit' },
  { src: image4, alt: 'Laboratory Equipment' },
  { src: image5, alt: 'EcoDenser System' },
  { src: image6, alt: 'Product Detail' },
];
---

<section class="py-20 bg-white" id="gallery">
  <div class="container mx-auto px-4">
    <h2 class="text-4xl font-bold text-center text-gray-900 mb-12">Gallery</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-7xl mx-auto">
      {images.map((image, index) => (
        <div class="aspect-square overflow-hidden rounded-lg shadow-lg cursor-pointer gallery-image-card group" data-image-src={image.src.src} data-image-alt={image.alt}>
          <Image
            src={image.src}
            alt={image.alt}
            width={600}
            height={600}
            class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
            format="webp"
            quality={90}
            loading="lazy"
          />
        </div>
      ))}
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    import('../scripts/shared-modal.ts').then(() => {
      if ((window as any).sharedImageModal) {
        (window as any).sharedImageModal.attachToElements('.gallery-image-card');
      }
    });
  });
</script>